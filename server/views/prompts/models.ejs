<div style="margin-bottom: 20px;">
    <div style="margin-bottom: 10px; font-weight: bold;">Select Models:</div>
    <div style="display: flex; flex-wrap: wrap; justify-content: space-between; gap: 20px;">
        <% Object.keys(supportedModels).forEach(provider => { %>
            <div style="max-width: 300px;">
                <div style="font-weight: bold; margin-bottom: 10px; color: #333;">
                    <i class="bi bi-<%= provider === 'xai' ? 'twitter-x' : provider %>" style="vertical-align: middle; margin-right: 8px;"></i><%= provider %>
                </div>
                <% supportedModels[provider].forEach(model => { %>
                    <div style="margin-bottom: 5px;">
                        <label style="display: flex; align-items: center; font-weight: normal;">
                            <input
                                type="checkbox"
                                name="models"
                                value="<%= provider %>:<%= model %>"
                                style="margin-right: 8px;"
                                <%= models.includes(provider + ':' + model) ? 'checked' : '' %>
                            />
                            <%= model %>
                        </label>
                    </div>
                <% }) %>
            </div>
        <% }) %>
    </div>
</div>
