<%- include('partials/header', { title: 'Responses', currentPage: 'responses' }) %>

<h1>Responses</h1>

<div class="mb-3">
    <label for="providerFilter" class="form-label">Filter by Provider:</label>
    <select id="providerFilter" class="form-select" style="width: 200px;">
        <option value="all">All</option>
        <option value="anthropic">Anthropic</option>
        <option value="google">Google</option>
        <option value="openai">OpenAI</option>
        <option value="perplexity">Perplexity</option>
    </select>
</div>

<table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
    <thead>
        <tr style="background-color: #f2f2f2;">
            <th style="border: 1px solid #ddd; padding: 12px; text-align: left;">Prompt</th>
            <th style="border: 1px solid #ddd; padding: 12px; text-align: left;">Response</th>
            <th style="border: 1px solid #ddd; padding: 12px; text-align: center; width: 80px;">Model</th>
            <th style="border: 1px solid #ddd; padding: 12px; text-align: left;">Created</th>
            <th style="border: 1px solid #ddd; padding: 12px; text-align: center; width: 80px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% if (responses && responses.length > 0) { %>
            <% responses.forEach(response => { %>
                <tr>
                    <td style="border: 1px solid #ddd; padding: 12px; max-width: 200px; word-wrap: break-word;">
                        <%= response.prompt || 'N/A' %>
                    </td>
                    <td style="border: 1px solid #ddd; padding: 12px; max-width: 300px; word-wrap: break-word;">
                        <% if (response.response && response.response.length > 100) { %>
                            <%= response.response.substring(0, 100) %>...
                        <% } else { %>
                            <%= response.response || 'N/A' %>
                        <% } %>
                    </td>
                    <td style="border: 1px solid #ddd; padding: 12px; text-align: center;">

                        <% const modelParts = response.model.split(':'); %>
                        <i
                            class="bi bi-<%= modelParts[0] %>"
                            style="cursor: help;"
                            title="<%= response.model %>"
                        ></i>
                    </td>
                    <td style="border: 1px solid #ddd; padding: 12px;">
                        <%= response.created_at ? new Date(response.created_at).toISOString() : 'N/A' %>
                    </td>
                    <td style="border: 1px solid #ddd; padding: 12px; text-align: center;">
                        <a href="/responses/<%= response.id %>" style="color: #04AA6D; text-decoration: none; font-size: 18px;" title="View Response">üîç</a>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="5" style="border: 1px solid #ddd; padding: 12px; text-align: center; color: #666;">
                    No responses found
                </td>
            </tr>
        <% } %>
    </tbody>
</table>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const providerFilter = document.getElementById('providerFilter');

    // Set selected option based on URL parameter
    const urlParams = new URLSearchParams(window.location.search);
    const currentProvider = urlParams.get('provider') || 'all';
    providerFilter.value = currentProvider;

    // Handle filter change
    providerFilter.addEventListener('change', function() {
        const selectedProvider = this.value;
        const url = new URL(window.location);

        if (selectedProvider === 'all') {
            url.searchParams.delete('provider');
        } else {
            url.searchParams.set('provider', selectedProvider);
        }

        window.location.href = url.toString();
    });
});
</script>

<%- include('partials/footer') %>
