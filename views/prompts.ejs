<%- include('partials/header', { title: 'Prompts', currentPage: 'prompts' }) %>

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h1>Prompts</h1>
    <a href="/prompts/add" style="background-color: #04AA6D; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px; font-weight: bold;">Add Prompt</a>
</div>

<table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
    <thead>
        <tr style="background-color: #f2f2f2;">
            <th style="border: 1px solid #ddd; padding: 12px; text-align: left;">Prompt</th>
            <th style="border: 1px solid #ddd; padding: 12px; text-align: left;">Created</th>
            <th style="border: 1px solid #ddd; padding: 12px; text-align: center; width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% if (prompts && prompts.length > 0) { %>
            <% prompts.forEach(prompt => { %>
                <tr>
                    <td style="border: 1px solid #ddd; padding: 12px;"><%= prompt.prompt %></td>
                    <td style="border: 1px solid #ddd; padding: 12px;">
                        <%= prompt.created_at ? new Date(prompt.created_at).toLocaleDateString() : 'N/A' %>
                    </td>
                    <td style="border: 1px solid #ddd; padding: 12px; text-align: center;">
                        <div class="btn-group" role="group">
                            <a href="/prompts/<%= prompt.id %>/run" class="btn btn-success btn-sm">Run All</a>
                            <button class="btn btn-success btn-sm dropdown-toggle dropdown-toggle-split" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="visually-hidden">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu">
                                <% for (const model of models) { %>
                                    <% const modelParts = model.split(':'); %>
                                    <li>
                                        <a class="dropdown-item" href="/prompts/<%= prompt.id %>/run?model=<%= model %>">
                                            <i class="bi bi-<%= modelParts[0] %>"></i> <%= model %>
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        </div>
                        <a href="/prompts/<%= prompt.id %>/delete" class="btn btn-danger btn-sm ms-2" onclick="return confirm('Are you sure you want to delete this prompt?')">Delete</a>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="3" style="border: 1px solid #ddd; padding: 12px; text-align: center; color: #666;">
                    No prompts found
                </td>
            </tr>
        <% } %>
    </tbody>
</table>

<%- include('partials/footer') %>
