<%- include('partials/header', { title: 'Competitors', currentPage: 'competitors' }) %>

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h1>Competitors</h1>
    <a href="/competitors/add" style="background-color: #04AA6D; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px; font-weight: bold;">Add Competitor</a>
</div>

<table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
    <thead>
        <tr style="background-color: #f2f2f2;">
            <th style="border: 1px solid #ddd; padding: 12px; text-align: left;">Name</th>
            <th style="border: 1px solid #ddd; padding: 12px; text-align: left;">URL</th>
        </tr>
    </thead>
    <tbody>
        <% if (competitors && competitors.length > 0) { %>
            <% competitors.forEach(competitor => { %>
                <tr>
                    <td style="border: 1px solid #ddd; padding: 12px;"><%= competitor.name %></td>
                    <td style="border: 1px solid #ddd; padding: 12px;">
                        <% if (competitor.url) { %>
                            <a href="<%= competitor.url %>" target="_blank"><%= competitor.url %></a>
                        <% } else { %>
                            N/A
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="3" style="border: 1px solid #ddd; padding: 12px; text-align: center; color: #666;">
                    No competitors found
                </td>
            </tr>
        <% } %>
    </tbody>
</table>

<%- include('partials/footer') %>
